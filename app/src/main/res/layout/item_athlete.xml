<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/dark_grey"
    android:layout_margin="15dp"
    app:cardCornerRadius="12dp"
    android:layout_width="180dp"
    android:layout_height="300dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/item_athlete_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/avatar_default"
            android:layout_width="100dp"
            android:layout_height="100dp"/>

        <TextView
            android:id="@+id/tv_item_athlete_name"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:text="@string/placeholder_name"
            android:layout_below="@id/item_athlete_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="@string/country"
            android:textColor="@color/white"
            android:layout_below="@id/tv_item_athlete_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_item_athlete_country"
            android:textColor="@color/white"
            android:layout_marginStart="70dp"
            android:layout_marginTop="20dp"
            android:text="@string/country_placeholder"
            android:layout_below="@id/tv_item_athlete_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/white"
            android:layout_below="@id/tv_item_athlete_country"
            android:text="@string/athlete_sport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_item_athlete_sport"
            android:layout_marginTop="10dp"
            android:layout_marginStart="55dp"
            android:layout_below="@id/tv_item_athlete_country"
            android:textColor="@color/white"
            android:text="@string/sport_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:text="@string/athlete_club"
            android:layout_below="@id/tv_item_athlete_sport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_item_athlete_club"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"
            android:layout_below="@id/tv_item_athlete_sport"
            android:textColor="@color/white"
            android:text="@string/club_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </RelativeLayout>

</androidx.cardview.widget.CardView>